{
  "expo": {
    "name": "TaxDemo",
    "slug": "taxDemo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Icon_app.png",
    "scheme": "taxdemo",
    "userInterfaceStyle": "automatic",

    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Ứng dụng cần quyền truy cập camera để quét mã vạch"
      },
            "bundleIdentifier": "com.company.taxdemo"

      
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
       "permissions": ["CAMERA"],
             "package": "com.company.taxdemo"

    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Icon_app.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
