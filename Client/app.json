{
	"expo": {
		"name": "TaxDemo",
		"slug": "taxDemo",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/Icon_app.png",
		"scheme": "taxdemo",
		"userInterfaceStyle": "automatic",

		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true,
			"infoPlist": {
				"NSCameraUsageDescription": "Ứng dụng cần quyền truy cập camera để quét mã vạch"
			},
			"bundleIdentifier": "com.company.taxdemo"
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"edgeToEdgeEnabled": true,
			"permissions": ["CAMERA"],
			"package": "com.company.taxdemo",
			"versionCode": 2
		},
		"extra": {
			"privacyPolicy": "https://sites.google.com/d/18x6MY5hb4XTRNLfK0hAUihaUjgVyWC-_/p/1vQ8I2qiQLaYNLVHAS6pkuIDZycvOrjS2/edit"
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/Icon_app.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#ffffff"
				}
			],
			["expo-file-system"]
		],
		"experiments": {
			"typedRoutes": true
		}
	}
}
